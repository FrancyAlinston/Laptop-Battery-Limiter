#!/bin/bash

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m'

print_colored() {
    echo -e "${1}${2}${NC}"
}

case "$1" in
    remove|purge)
        print_colored $BLUE "ðŸ§¹ Final cleanup..."
        
        # Remove any remaining configuration files
        rm -f /etc/xdg/autostart/universal-battery-limiter.desktop || true
        
        # Clean up any cached files
        rm -rf /var/cache/universal-battery-limiter || true
        
        # Update desktop database one more time
        if command -v update-desktop-database >/dev/null 2>&1; then
            update-desktop-database || true
        fi
        
        print_colored $GREEN "âœ¨ Cleanup completed!"
        ;;
        
    upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
        # Don't do anything special for these cases
        ;;
        
    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

exit 0
